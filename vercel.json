{
  "version": 2,
  "functions": {
    "api/upload.js": {
      "maxDuration": 30
    },
    "api/test.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/build"
} 